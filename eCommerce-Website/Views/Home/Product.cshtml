@{
    ViewData["Title"] = "Danh sách hàng hóa";
}
<h1>@ViewData["Title"]</h1>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
<link rel="stylesheet" href="//cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css"/>

<table id="tbl"> 
    <thead>
        <tr>
            <th>Mã</th>
            <th>Giới tính</th>
            <th>Loại</th>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Giá giảm</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<script>
    $(document).ready(function () {
        var = url = "http://localhost:5132/Product/List";
        $.post(url, {}, function (kq) { 
            var dulieu = kq.data;
            $('#tbl').DataTable(
                {
                    data: dulieu,
                    columns: [
                        { "data": "id" },
                        { "data": "genderId" },
                        { "data": "categoryId" },
                        { "data": "namePro" },
                        { "data": "describe" },
                        { "data": "price" },
                        { "data": "discount" },
                        { "data": "amount" },
                        { "data": "state" },
                        { "data": "dateCreate" },
                    ]
                }
            );
        })
    });
</script>
